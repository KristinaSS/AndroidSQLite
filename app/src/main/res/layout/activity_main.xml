<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="204dp"
            android:layout_height="247dp" tools:srcCompat="@drawable/icon" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:text="Da Best App Login evaaaa"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/imageView" app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp"/>
    <TextView
            android:text="User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="@+id/userNameBOX"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="6dp"
            android:layout_marginStart="39dp"/>
    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/PasswordBOX"
            android:layout_marginStart="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/PasswordBOX"
            android:layout_marginStart="26dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginBottom="211dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/userNameBOX"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="31dp" app:layout_constraintEnd_toEndOf="@+id/PasswordBOX"
            app:layout_constraintBottom_toTopOf="@+id/PasswordBOX"/>
    <Button
            android:text="Login"
            android:layout_width="277dp"
            android:layout_height="0dp" android:id="@+id/LoginBUT"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/PasswordBOX" android:layout_marginBottom="29dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="57dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>