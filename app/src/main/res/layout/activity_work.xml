<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WorkActivity">

    <Button
            android:text="SHOW ALL USERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ShowAllUsersBUT"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" app:layout_constraintBaseline_toBaselineOf="@+id/AddUserBUT"
            app:layout_constraintEnd_toStartOf="@+id/AddUserBUT" android:layout_marginEnd="26dp"
    />
    <Button
            android:text="ADD USER"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/AddUserBUT"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/ShowAllUsersBUT" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/button5"
            android:layout_marginEnd="71dp"/>
    <Button
            android:text="DELETE USER"
            android:layout_width="0dp"
            android:layout_height="44dp" android:id="@+id/DeleteUserBUT"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5" app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:layout_marginEnd="32dp"/>
    <Button
            android:text="SEARCH"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/AddUserBUT"
            app:layout_constraintStart_toEndOf="@+id/DeleteUserBUT" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="23dp" app:layout_constraintBottom_toTopOf="@+id/ShowView"
            android:layout_marginEnd="76dp"/>
    <TextView
            android:text="My Application"
            android:layout_width="267dp"
            android:layout_height="0dp" android:id="@+id/textView3"
            android:layout_marginTop="43dp"
            android:layout_marginBottom="90dp" app:layout_constraintBottom_toTopOf="@+id/AddUserBUT"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp"/>
    <AutoCompleteTextView
            android:text="AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/ShowView"
            app:layout_constraintTop_toBottomOf="@+id/button5" android:layout_marginBottom="19dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/LogOutBUT"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="53dp" android:layout_marginEnd="53dp"/>
    <Button
            android:text="LOGOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/LogOutBUT"
            app:layout_constraintStart_toStartOf="@+id/ShowView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="94dp" app:layout_constraintTop_toBottomOf="@+id/ShowView"
            android:layout_marginBottom="52dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>